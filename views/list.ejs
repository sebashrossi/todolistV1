<%- include("header") -%>
<div class="box">
  <div class="row">
    <div class="col-lg-12 tday">
      <p><%= listTitle %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 date">
      <h1 class="day"><%= day %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mnth">
      <p class="mes"><%= month %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 yr">
      <p class="yer"><%= year %></p>
    </div>
  </div>
  <% newListItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <p><%= item.name %></p><button class="del" type="submit" name="delete" value="<%=item._id%>">X</button>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </div>
  </form>
  <% }) %>
  <div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle"></h5>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-lg-12">
              <form class="addItem" action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off" id="myInput">
                <button class="postItem btn btn-outline-primary" type="submit" name="list" value="<%=listTitle%>">Add</button>
              </form>
            </div>
          </div>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
</div>
<button class="add" type="submit" data-toggle="modal" data-target="#modalCenter">
  +
</button>
<%- include("footer") -%>
